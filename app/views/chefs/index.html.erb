<h1 class="center p-4"> All Chefs</h1>
<hr />


<div class="centser">
  <%= will_paginate%>
  </div>
  


<div class ="center m-4">

  <% @chefs.each do |chef|%>
    <ul class="listing ">
    <div class="row">
      <div class="well col-md-4 offset-4 p-4 bg-light">
      <li><%= link_to Gravatar_for(chef), chef_path(chef) %></li>
      <li class="chef-title"><%= link_to chef.chefname.capitalize , chef_path(chef) %></li>
      <li><small> <%= pluralize(chef.recipes.count , "recipe") if chef.recipes %></small></li>
      <li><%= link_to "Delete Chef" , chef_path(chef), data: {turbo_method: :delete,turbo_confirm: 'Are you sure?'}%></li>
      </div>
    </div>
    </ul>
  <% end %>

  <div class="center">
  <%= will_paginate%>
</div>


</div>