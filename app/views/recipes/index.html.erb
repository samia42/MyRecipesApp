<h1 class="pt-4 center"  >All Recipes</h1>
<hr/>
<% @recipes.each do |recipe| %>
    <div class='row'>
        <div class="col-md-2">
            <section class="chef_info center">
            <%= Gravatar_for(recipe.chef, size:120)%>
            </section>
        </div>
        <div class="col-md-8 border m-2 pt-1 bg-light well">
           
                <h4><%=  link_to recipe.name.capitalize, recipe_path(recipe) %></h4>
                <p><%= truncate(recipe.description, length:150)%></p>
                <p>
                    <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small></span>
                </p>
           
        </div>
    
    </div>
<%end%>